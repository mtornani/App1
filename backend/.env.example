CONCURRENT_SCRAPERS=5

# === MODEL CONFIGURATION ===
EMBEDDING_MODEL=Xenova/embedding-gemma-300m
LLM_MODEL=Xenova/gemma-2b

# === SERVER CONFIGURATION ===
PORT=3001
NODE_ENV=production

# === LEGAL RULES ===
FIFA_MIN_RESIDENCE_YEARS=5
SMR_MIN_RESIDENCE_YEARS=10
SMR_ALLOW_DUAL_CITIZENSHIP=false
