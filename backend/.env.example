# === DATABASE ===
DATABASE_URL=sqlite://./data/database.sqlite

# === API KEYS (opzionali per fallback) ===
OPENROUTER_API_KEY=
SERPAPI_KEY=

# === LLM CONFIGURATION ===
LOCAL_LLM_ENABLED=true

# === SCRAPING CONFIGURATION ===
